<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.SecondMenuController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #bcbcbc;">
    <VBox alignment="CENTER" prefHeight="100.0" prefWidth="400.0">
        <Label fx:id="titleLabel" text="" alignment="CENTER" style="-fx-font-size: 30;">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
            <VBox.margin>
                <Insets bottom="-100"/>
            </VBox.margin>
        </Label>
    </VBox>
    <VBox alignment="CENTER" layoutX="1.0" layoutY="75.0" prefHeight="300.0" prefWidth="400.0">
        <TilePane alignment="CENTER" orientation="VERTICAL" prefHeight="200.0" prefWidth="200.0" vgap="10.0">
            <Button fx:id="newPhone" text="Phone" mnemonicParsing="false" prefHeight="25.0" prefWidth="75.0"/>
            <Button fx:id="newTV" text="TV" mnemonicParsing="false" prefHeight="25.0" prefWidth="75.0"/>
            <Button fx:id="newCustomer" text="Customer" mnemonicParsing="false" prefHeight="25.0"
                    prefWidth="75.0"/>
            <Button fx:id="newAccount" text="Account" mnemonicParsing="false" prefHeight="25.0"
                    prefWidth="75.0"/>
        </TilePane>
    </VBox>
</AnchorPane>
