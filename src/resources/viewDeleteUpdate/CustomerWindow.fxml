<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import classes.PaneFrame?>
<?import javafx.geometry.Insets?>

<PaneFrame xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="controllers.CustomerController"
           prefHeight="400.0" prefWidth="600.0"
           style="-fx-background-color: #bcbcbc;"
           fx:id="paneFrame">
    <top>
        <VBox alignment="CENTER" prefHeight="78.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="titleLabel" style="-fx-font-size: 30;"/>
            </children>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tableView" BorderPane.alignment="CENTER" prefHeight="200.0" prefWidth="300.0">
            <BorderPane.margin>
                <Insets left="25.0" right="25.0"/>
            </BorderPane.margin>
            <columns>
                <TableColumn fx:id="cNoCol" text="cNo" minWidth="50"/>
                <TableColumn fx:id="bNoCol" text="bNo" minWidth="50"/>
                <TableColumn fx:id="nameCol" text="Name" minWidth="75"/>
                <TableColumn fx:id="addressCol" text="Address" minWidth="75"/>
                <TableColumn fx:id="contactNoCol" text="Contact No" minWidth="75"/>
            </columns>
        </TableView>
    </center>
</PaneFrame>
